#version 150

uniform mat4 projMatrix;
uniform mat4 camMatrix;
uniform mat4 tranMatrix;
uniform mat4 rotMatrix;
//uniform mat4 totalMatrix;

// For object
in  vec3 vert_Position;
in  vec3 vert_Normal;
in  vec2 vert_TextCoord;

out vec3 frag_Normal;
out vec3 frag_Position;

void main(void)
{
	gl_Position = projMatrix * camMatrix * tranMatrix * rotMatrix * vec4(vert_Position, 1.0);

    mat3 normalMatrix = mat3(camMatrix * tranMatrix * rotMatrix);
    //frag_Normal = normalize(normalMatrix * normalize(vert_Normal));
    frag_Normal = normalize(vert_Normal);
    frag_Position = vec3(tranMatrix * rotMatrix * vec4(vert_Position, 1.0));
}
